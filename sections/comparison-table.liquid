{% comment %}
  CHANGES:
  1. Added image display above product title in the header row
  2. Added image picker in schema settings
  3. Added CSS styling for the product image
  4. Added custom subtitle icons and glass effect styling
{% endcomment %}

<div
  class="comparison-section section-{{ section.id }}"
  style="background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.background_color }}{% endif %};"
>
  <div class="comparison-container">
    {% if section.settings.show_heading %}
      <div class="comparison-header">
        <h2 class="comparison-heading">
          <span
            class="title-part-1"
            style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.text_color }}{% endif %};"
          >
            {{- section.settings.title_part_1 -}}
          </span>
          <span
            class="global-accent-text"
            style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.accent_1_color }}{% endif %};"
          >
            {{- section.settings.title_part_2 -}}
          </span>
        </h2>
        {% if section.settings.subheading != blank %}
          <div
            class="comparison-subheading"
            style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.subheading_color }}{% endif %};"
          >
            {{ section.settings.subheading }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="table-wrapper">
      <table class="comparison-table">
        <!-- Header Row -->
        <thead>
          <tr class="table-header">
            <th class="feature-header"></th>
            {% for block in section.blocks %}
              {% if block.type == 'product_column' and forloop.index <= 2 %}
                <th
                  class="product-header column-{{ forloop.index }} {% if block.settings.highlight_column %}highlighted{% endif %}"
                  data-column="{{ forloop.index }}"
                >
                  {% if block.settings.product_image != blank %}
                    <div class="comparison-img-wrapper">
                      <img
                        src="{{ block.settings.product_image | img_url: '150x' }}"
                        alt="{{ block.settings.product_name }}"
                        class="comparison-img column-{{ forloop.index }}-img"
                        width="auto"
                        height="auto"
                        loading="lazy"
                      >
                    </div>
                  {% endif %}
                  <div
                    class="comparison-product-title"
                    style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{% if block.settings.highlight_column %}{{ section.settings.highlighted_text_color }}{% else %}{{ section.settings.text_color }}{% endif %}{% endif %};"
                  >
                    {{ block.settings.product_name }}
                  </div>
                  {% if block.settings.product_subtitle != blank %}
                    <div
                      class="product-subtitle {% if block.settings.use_subtitle_background != true %}no-background{% endif %}"
                      style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{% if block.settings.highlight_column %}{{ section.settings.highlighted_subtitle_color }}{% else %}{{ section.settings.subtitle_color }}{% endif %}{% endif %};"
                    >
                      {% if block.settings.show_subtitle_icon != false %}
                        {% if block.settings.subtitle_custom_icon != blank %}
                          <span class="subtitle-icon">{{ block.settings.subtitle_custom_icon }}</span>
                        {% else %}
                          {% if block.settings.highlight_column %}
                            <span class="subtitle-icon">
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" width="16" height="16" fill="currentColor"><path d="M225.86,102.82c-3.77-3.94-7.67-8-9.14-11.57-1.36-3.27-1.44-8.69-1.52-13.94-.15-9.76-.31-20.82-8-28.51s-18.75-7.85-28.51-8c-5.25-.08-10.67-.16-13.94-1.52-3.56-1.47-7.63-5.37-11.57-9.14C146.28,23.51,138.44,16,128,16s-18.27,7.51-25.18,14.14c-3.94,3.77-8,7.67-11.57,9.14C88,40.64,82.56,40.72,77.31,40.8c-9.76.15-20.82.31-28.51,8S41,67.55,40.8,77.31c-.08,5.25-.16,10.67-1.52,13.94-1.47,3.56-5.37,7.63-9.14,11.57C23.51,109.72,16,117.56,16,128s7.51,18.27,14.14,25.18c3.77,3.94,7.67,8,9.14,11.57,1.36,3.27,1.44,8.69,1.52,13.94.15,9.76.31,20.82,8,28.51s18.75,7.85,28.51,8c5.25.08,10.67.16,13.94,1.52,3.56,1.47,7.63,5.37,11.57,9.14C109.72,232.49,117.56,240,128,240s18.27-7.51,25.18-14.14c3.94-3.77,8-7.67,11.57-9.14,3.27-1.36,8.69-1.44,13.94-1.52,9.76-.15,20.82-.31,28.51-8s7.85-18.75,8-28.51c.08-5.25.16-10.67,1.52-13.94,1.47-3.56,5.37-7.63,9.14-11.57C232.49,146.28,240,138.44,240,128S232.49,109.73,225.86,102.82Zm-52.2,6.84-56,56a8,8,0,0,1-11.32,0l-24-24a8,8,0,0,1,11.32-11.32L112,148.69l50.34-50.35a8,8,0,0,1,11.32,11.32Z"/></svg>
                            </span>
                          {% endif %}
                        {% endif %}
                      {% endif %}
                      {{ block.settings.product_subtitle }}
                    </div>
                  {% endif %}
                </th>
              {% endif %}
            {% endfor %}
          </tr>
        </thead>

        <!-- Feature Rows -->
        <tbody>
          {% for block in section.blocks %}
            {% if block.type == 'feature_row' %}
              <tr class="feature-row">
                <td class="feature-cell">
                  <div class="feature-content">
                    {% if block.settings.show_icon %}
                      {% if block.settings.feature_image != blank %}
                        <div class="feature-icon">
                          <img
                            src="{{ block.settings.feature_image | img_url: '48x' }}"
                            alt="{{ block.settings.feature_name }}"
                            width="24"
                            height="24"
                          >
                        </div>
                      {% elsif block.settings.feature_icon != blank %}
                        <div class="feature-icon">{{ block.settings.feature_icon }}</div>
                      {% endif %}
                    {% endif %}
                    <div
                      class="feature-name"
                      style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.text_color }}{% endif %};"
                    >
                      {{ block.settings.feature_name }}
                    </div>
                  </div>
                </td>

                {% for i in (1..2) %}
                  {% assign value_setting = 'value_' | append: i %}
                  {% assign text_value_setting = 'text_value_' | append: i %}

                  <td
                    class="value-cell column-{{ i }} {% if block.settings.highlight_column %}highlighted{% endif %}"
                    data-column="{{ i }}"
                  >
                    {% if block.settings.value_type == 'checkmark' %}
                      {% if block.settings[value_setting] == 'yes' %}
                        <span class="check-yes">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" width="24" height="24">
                            <rect width="256" height="256" fill="none"/><path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm45.66,85.66-56,56a8,8,0,0,1-11.32,0l-24-24a8,8,0,0,1,11.32-11.32L112,148.69l50.34-50.35a8,8,0,0,1,11.32,11.32Z" fill="currentColor"/>
                          </svg>
                        </span>
                      {% else %}
                        <span class="check-no">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" width="24" height="24">
                            <rect width="256" height="256" fill="none"/><path d="M128,24A104,104,0,1,0,232,128,104.12,104.12,0,0,0,128,24Zm36.44,132.88a8,8,0,0,1,0,11.31,8.17,8.17,0,0,1-11.31,0L128,143.31l-25.13,24.88a8.17,8.17,0,0,1-11.31,0,8,8,0,0,1,0-11.31L116.69,132,91.56,107.13a8,8,0,0,1,11.31-11.32L128,120.69l25.13-24.88a8,8,0,0,1,11.31,11.32L139.31,132Z" fill="currentColor"/>
                          </svg>
                        </span>
                      {% endif %}
                    {% else %}
                      {% assign is_highlighted_column = false %}
                      {% for product_block in section.blocks %}
                        {% if product_block.type == 'product_column' and product_block.settings.highlight_column and forloop.index == i %}
                          {% assign is_highlighted_column = true %}
                        {% endif %}
                      {% endfor %}
                      
                      <span
                        class="text-value"
                        style="
                          color: {% if section.settings.use_theme_colors %}
                            {% if is_highlighted_column %}{{ settings.global_section_background_color }}{% else %}{{ settings.global_section_text_color }}{% endif %}
                          {% else %}
                            {% if is_highlighted_column %}{{ section.settings.highlighted_check_color }}{% else %}{{ section.settings.text_color }}{% endif %} !important;
                          {% endif %} !important;
                          letter-spacing: var(--letter-spacing-body);
                        "
                      >
                        {{- block.settings[text_value_setting] -}}
                      </span>
                    {% endif %}
                  </td>
                {% endfor %}
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }} {
    padding: 40px 20px;
    {% if section.settings.use_gradient_background %}
      background: linear-gradient({{ section.settings.gradient_direction }}deg, {{ section.settings.gradient_color_1 }}, {{ section.settings.gradient_color_2 }});
    {% else %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
    font-family: var(--font-body-family-override);
    letter-spacing: var(--letter-spacing-heading);
    position: relative;
    z-index: 1; /* Lower z-index for the entire section */
  }

  /* Remove custom property from the entire section */
  .section-{{ section.id }} * {
    --border-shadow-offset: 0 !important;
    box-shadow: none !important;
  }

  .section-{{ section.id }} .comparison-container {
    max-width: {{ section.settings.table_width }}px;
    margin: 0 auto;
    position: relative;
  }

  .section-{{ section.id }} .table-wrapper {
    width: 100%;
    overflow-x: auto;
  }

  .section-{{ section.id }} .comparison-header {
    text-align: center;
    margin-bottom: 15px;
    padding: 20px;
    line-height: 20px;
    position: relative;
    z-index: 2; /* Higher than the comparison table */
  }

  .section-{{ section.id }} .comparison-heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: var(--font-weight-bold);
    letter-spacing: var(--letter-spacing-heading);
    margin: 0 0 15px 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 1px;
  }

  .section-{{ section.id }} .title-part-1 {
    color: {{ section.settings.title_part_1_color }};
  }

  .section-{{ section.id }} .global-accent-text {
    margin-left: 5px;
    color: {{ section.settings.title_part_2_color | default: settings.accent_text_color }};
    font-family: {{ settings.accent_text_font.family }}, {{ settings.accent_text_font.fallback_families }};
    font-weight: {{ section.settings.title_part_2_weight | default: settings.accent_text_weight }};
    font-style: {{ section.settings.title_part_2_style | default: settings.accent_text_style }};
  }

  .section-{{ section.id }} .comparison-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    font-weight: var(--font-weight-regular);
    letter-spacing: var(--letter-spacing-body);
    color: {{ section.settings.subheading_color }};
    max-width: 700px;
    margin: 0 auto;
  }

  .section-{{ section.id }} .comparison-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    position: relative;
    table-layout: fixed;
    margin: 0 auto;
    max-width: 680px !important; /* Increased from 520px for desktop */
  }

  .section-{{ section.id }} .table-header th {
    border-bottom: 1px solid {{ section.settings.border_color }};
    position: relative;
  }

  .section-{{ section.id }} .product-header {
    padding: 20px 12px; /* Increased padding */
    text-align: center;
    width: 140px; /* Fixed width for 2 columns */
  }

  /* New styles for product image with column-specific sizing */
  .section-{{ section.id }} .comparison-img-wrapper {
    margin-bottom: 15px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .section-{{ section.id }} .comparison-img {
    max-width: 100%;
    height: auto;
    max-height: 80px; /* Default fallback */
    border-radius: 4px;
    object-fit: contain;
    background: transparent;
  }

  /* Generate per-column styles for image sizes */
  {% for block in section.blocks %}
    {% if block.type == 'product_column' %}
      .section-{{ section.id }} .column-{{ forloop.index }}-img {
        max-height: {{ block.settings.product_image_size | default: 80 }}px;
      }
    {% endif %}
  {% endfor %}

  .section-{{ section.id }} .feature-header {
    text-align: left;
    width: 180px; /* Increased from 140px */
    position: relative;
    z-index: 1;
    border-bottom: 1px solid {{ section.settings.border_color }};
  }

  .section-{{ section.id }} .comparison-product-title {
    font-weight: var(--font-weight-semibold);
    font-size: {{ section.settings.product_title_size }}px;
    line-height: 1.2;
    letter-spacing: var(--letter-spacing-body);
    color: {{ section.settings.text_color }};
    margin-bottom: 6px; /* Increased from 4px */
  }

  /* Add glass effect styling to product subtitles */
  .section-{{ section.id }} .product-subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    letter-spacing: var(--letter-spacing-body);
    font-weight: var(--font-weight-regular);
    color: {{ section.settings.subtitle_color }};
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-top: 5px;
    gap: 0px;
    padding: 0px 10px;
    /* Glass effect */
    background: rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  /* Style for subtitle without background */
  .section-{{ section.id }} .product-subtitle.no-background {
    background: transparent;
    box-shadow: none;
    backdrop-filter: none;
    -webkit-backdrop-filter: none;
    border: none;
    padding: 0;
  }

  .section-{{ section.id }} .subtitle-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-right: 4px;
    vertical-align: middle;
    line-height: 1;
  }

  .section-{{ section.id }} .subtitle-icon svg {
    width: 13px;
    height: 13px;
    display: block;
    vertical-align: middle;
  }

  .section-{{ section.id }} .feature-icon {
    margin-right: 14px; /* Increased from 12px */
    color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.icon_color }}{% endif %};
    width: 24px; /* Increased from 20px */
    height: 24px; /* Increased from 20px */
    display: flex;
    align-items: center;
  }

  .section-{{ section.id }} .feature-icon svg {
    width: 24px; /* Increased from 20px */
    height: 24px; /* Increased from 20px */
    stroke: currentColor;
  }

  .section-{{ section.id }} .close-icon {
    color: #000000;
  }

  .section-{{ section.id }} .check-icon {
    color: #FFFFFF !important;
  }

  /* Override for custom icon colors - now handled per column */
  {% for block in section.blocks %}
    {% if block.type == 'product_column' %}
      .section-{{ section.id }} .column-{{ forloop.index }} .subtitle-icon {
        {% if forloop.index == 1 %}
        color: #FFFFFF !important;
        {% else %}
        color: {% if block.settings.subtitle_icon_color != blank %}{{ block.settings.subtitle_icon_color }}{% else %}#000000{% endif %} !important;
        {% endif %}
      }
    {% endif %}
  {% endfor %}

  .section-{{ section.id }} .feature-row td {
    border-bottom: 1px solid {{ section.settings.border_color }};
  }

  .section-{{ section.id }} .feature-cell {
    padding: 16px 12px; /* Increased padding */
    text-align: left;
    position: relative;
    z-index: 1;
  }

  .section-{{ section.id }} .feature-content {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .section-{{ section.id }} .feature-name {
    font-weight: var(--font-weight-regular);
    line-height: 1.4;
    letter-spacing: var(--letter-spacing-body);
    font-size: {{ section.settings.feature_name_size }}px;
    color: {{ section.settings.text_color }};
  }

  .section-{{ section.id }} .value-cell {
    padding: 16px 12px; /* Increased padding */
    text-align: center;
    vertical-align: middle;
    position: relative;
    z-index: 1;
  }

  /* Regular column checkmark styling */
  .section-{{ section.id }} .check-yes {
    color: {{ section.settings.check_color }};
    font-size: 24px; /* Increased from 20px */
    font-weight: var(--font-weight-bold);
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .section-{{ section.id }} .check-yes svg {
    width: 28px; /* Increased from 24px */
    height: 28px; /* Increased from 24px */
  }

  .section-{{ section.id }} .check-no {
    color: {{ section.settings.x_color }};
    font-size: 24px; /* Increased from 20px */
    font-weight: var(--font-weight-bold);
  }

  /* Highlighted column specific checkmark styling */
  .section-{{ section.id }} .value-cell.highlighted .check-yes {
    color: {{ section.settings.highlighted_check_color }};
  }

  .section-{{ section.id }} .value-cell.highlighted .check-no {
    color: {{ section.settings.highlighted_x_color }};
  }

  /* Add highlighted text value styling */
  .section-{{ section.id }} .value-cell.highlighted .text-value {
    color: {{ section.settings.highlighted_check_color }};
  }

  /* Theme colors override for highlighted and regular columns */
  {% if section.settings.use_theme_colors %}
    .section-{{ section.id }} .check-yes {
      color: {{ settings.global_section_accent_1_color }};
    }
    .section-{{ section.id }} .check-no {
      color: {{ settings.global_section_text_color }};
    }
    .section-{{ section.id }} .value-cell.highlighted .check-yes {
      color: {{ settings.global_section_background_color }};
    }
    .section-{{ section.id }} .value-cell.highlighted .check-no {
      color: {{ settings.global_section_background_color }};
    }
    .section-{{ section.id }} .value-cell.highlighted .text-value {
      color: {{ settings.global_section_background_color }} !important;
    }
    .section-{{ section.id }} .product-header.highlighted .comparison-product-title {
      color: {{ settings.global_section_background_color }} !important;
    }
    .section-{{ section.id }} .product-header.highlighted .product-subtitle {
      color: {{ settings.global_section_background_color }} !important;
    }
  {% endif %}

  .section-{{ section.id }} .text-value {
    font-weight: var(--font-weight-regular);
    font-size: {{ section.settings.text_value_size }}px;
    color: {{ section.settings.text_color }};
    font-family: var(--font-body-family-override);
    letter-spacing: var(--letter-spacing-body);
  }

  /* Special styling for the highlighted column */
  .section-{{ section.id }} .product-header.highlighted {
    position: relative;
    z-index: 2; /* Lower z-index than the header */
    margin-top: -12px; /* Increased from -10px */
    padding-top: 30px; /* Increased from 25px */
    padding-bottom: 30px; /* Increased from 25px */
    border: none !important;
  }

  /* Create the highlight column effect */
  .section-{{ section.id }} .product-header.highlighted:before,
  .section-{{ section.id }} .value-cell.highlighted:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    {% if section.settings.use_theme_colors %}
      background-color: {{ settings.global_section_accent_1_color }};
    {% else %}
      {% for block in section.blocks %}
        {% if block.type == 'product_column' and block.settings.highlight_column %}
          {% if block.settings.highlight_background_gradient != blank %}
            background: {{ block.settings.highlight_background_gradient }};
          {% else %}
          background-color: {{ block.settings.highlight_color }};
          {% endif %}
        {% endif %}
      {% endfor %}
    {% endif %}
  }

  /* Apply border radius to the header */
  .section-{{ section.id }} .product-header.highlighted:before {
    border-radius: {{ section.settings.highlight_border_radius }}px {{ section.settings.highlight_border_radius }}px 0 0;
  }

  .section-{{ section.id }} .value-cell.highlighted {
    position: relative;
    z-index: 2; /* Lower z-index than the header */
    border: none !important;
  }

  /* Remove the actual bottom border from cells in highlighted column */
  .section-{{ section.id }} td.highlighted,
  .section-{{ section.id }} th.highlighted {
    border-bottom: 0 !important;
  }

  /* Remove bottom border from the last row for all cells */
  .section-{{ section.id }} tr:last-child td {
    border-bottom: 0 !important;
  }

  /* Special rounded corners for bottom cells */
  .section-{{ section.id }} tr:last-child .value-cell.highlighted:before {
    border-radius: 0 0 {{ section.settings.highlight_border_radius }}px {{ section.settings.highlight_border_radius }}px;
    padding-bottom: 5px;
  }

  /* Add shadow to highlighted column */
  .section-{{ section.id }} .product-header.highlighted:after,
  .section-{{ section.id }} .value-cell.highlighted:after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -2;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08) !important;
    pointer-events: none;
  }

  /* Apply shadow border radius to match the background */
  .section-{{ section.id }} .product-header.highlighted:after {
    border-radius: {{ section.settings.highlight_border_radius }}px {{ section.settings.highlight_border_radius }}px 0 0;
  }

  .section-{{ section.id }} tr:last-child .value-cell.highlighted:after {
    border-radius: 0 0 {{ section.settings.highlight_border_radius }}px {{ section.settings.highlight_border_radius }}px;
  }

  /* Override for highlighted column to ensure icons have correct color */
  .section-{{ section.id }} .product-header.highlighted .subtitle-icon {
    color: {{ section.settings.highlighted_subtitle_color }};
  }

  /* Make the glass background and border color customizable in the product column settings */
  {% for block in section.blocks %}
    {% if block.type == 'product_column' %}
      .section-{{ section.id }} .column-{{ forloop.index }} .product-subtitle {
        {% if block.settings.use_subtitle_background != false %}
          background: {% if block.settings.subtitle_glass_color != blank %}{{ block.settings.subtitle_glass_color | color_modify: 'alpha', 0.2 }}{% else %}rgba(255, 255, 255, 0.2){% endif %};
          border: 1px solid {% if block.settings.subtitle_border_color != blank %}{{ block.settings.subtitle_border_color | color_modify: 'alpha', 0.3 }}{% else %}{% if block.settings.subtitle_glass_color != blank %}{{ block.settings.subtitle_glass_color | color_modify: 'alpha', 0.3 }}{% else %}rgba(255, 255, 255, 0.3){% endif %}{% endif %};
