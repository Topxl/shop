<noscript>{{ 'component-quick-edit-cart.css' | asset_url | stylesheet_tag }}</noscript>

<div class="productly-popup productly-edit-cart-popup customPopup-large" data-edit-cart-popup id="productly-edit-cart-popup" data-url-style-edit-cart="{{ 'component-quick-edit-cart.css' | asset_url }}" data-url-script-edit-cart="{{ 'variants-edit-cart.js' | asset_url }}">
    <div class="productly-popup-wrapper">
    	<div class="productly-popup-edit-header">
            <button type="button" class="productly-popup-close clearfix" data-close-edit-cart aria-label="{{ 'general.common.close' | t }}">{% render 'icon-close' %} {{ 'general.common.close' | t }}</button>
            <h5 class="productly-popup-title text-left">{{ 'sections.cart.edit_cart_title' | t }}</h5>
    	</div>
        <div class="productly-popup-content productly-popup-scroll custom-scrollbar"></div>
    </div>
</div>
