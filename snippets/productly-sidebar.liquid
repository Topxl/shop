{%- if settings.show_customer_login and shop.customer_accounts_enabled -%}
	{% render 'productly-customer-login-sidebar' %}
{%- endif -%}

{%- if settings.show_quick_cart -%}
	{% unless template contains 'cart' %}
		{% render 'productly-cart-sidebar' %}
	{% endunless %}
{%- endif -%}

{% if settings.show_before_you_leave %}
	{% render 'productly-before-you-leave' %}
{% endif %}

{% render 'productly-sidebar-search' %}

{% if settings.mobile_menu == 'vertical' %}
	{% render 'productly-sidebar-menu-vertical' %}
{% else %}
	{% render 'productly-sidebar-menu' %}
{% endif %}
