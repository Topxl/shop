<link rel="stylesheet" href="{{ 'component-compare-product.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-compare-product.css' | asset_url | stylesheet_tag }}</noscript>
<div class="productly-compareProduct">
    <button type="button" class="button button--primary" data-compare-link><span class="text">{{ 'compare.general.title' | t }}</span> (<span class="countPill" data-compare-count></span>)</button>
</div>
<div class="productly-popup productly-compare-product-popup customPopup-large" data-compare-product-popup id="productly-compare-product-popup">
	<div class="productly-popup-wrapper">
		<div class="productly-popup-header">
			<button type="button" class="productly-popup-close clearfix" data-close-compare-product-popup aria-label="{{ 'general.common.close' | t }}">{% render 'icon-close' %}{{ 'general.common.close' | t }}</button>
		    <h5 class="productly-popup-title text-center">{{ 'compare.general.title' | t }}</h5>
		</div>
		<div class="productly-popup-content productly-popup-scroll custom-scrollbar">{% render 'productly-compare-product-table' %}</div>
	</div>
</div>
